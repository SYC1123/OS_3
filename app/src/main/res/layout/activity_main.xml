<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Switch
        android:id="@+id/DCT1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="0"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Switch
        android:id="@+id/DCT2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="0"
        app:layout_constraintEnd_toEndOf="@+id/DCT1"
        app:layout_constraintStart_toStartOf="@+id/DCT1"
        app:layout_constraintTop_toBottomOf="@+id/DCT1" />

    <Switch
        android:id="@+id/DCT3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="0"
        app:layout_constraintEnd_toEndOf="@+id/DCT2"
        app:layout_constraintStart_toStartOf="@+id/DCT2"
        app:layout_constraintTop_toBottomOf="@+id/DCT2" />

    <Switch
        android:id="@+id/DCT4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="0"
        app:layout_constraintEnd_toEndOf="@+id/DCT3"
        app:layout_constraintStart_toStartOf="@+id/DCT3"
        app:layout_constraintTop_toBottomOf="@+id/DCT3" />

    <Switch
        android:id="@+id/DCT5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="0"
        app:layout_constraintEnd_toEndOf="@+id/DCT4"
        app:layout_constraintStart_toStartOf="@+id/DCT4"
        app:layout_constraintTop_toBottomOf="@+id/DCT4" />

    <Switch
        android:id="@+id/COCT1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="8dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/DCT2"
        app:layout_constraintEnd_toStartOf="@+id/DCT1"
        app:layout_constraintTop_toTopOf="@+id/DCT1"
        tools:ignore="MissingConstraints" />

    <Switch
        android:id="@+id/COCT2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/DCT4"
        app:layout_constraintEnd_toEndOf="@+id/COCT1"
        app:layout_constraintStart_toStartOf="@+id/COCT1"
        app:layout_constraintTop_toTopOf="@+id/DCT3"
        tools:ignore="MissingConstraints" />

    <Switch
        android:id="@+id/COCT3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="64dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/DCT5"
        app:layout_constraintEnd_toEndOf="@+id/COCT2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/COCT2"
        app:layout_constraintTop_toTopOf="@+id/DCT5" />

    <Switch
        android:id="@+id/CHCT1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="8dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/COCT2"
        app:layout_constraintEnd_toStartOf="@+id/COCT1"
        app:layout_constraintTop_toTopOf="@+id/COCT1" />

    <Switch
        android:id="@+id/CHCT2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/COCT3"
        app:layout_constraintEnd_toEndOf="@+id/CHCT1"
        app:layout_constraintStart_toStartOf="@+id/CHCT1"
        app:layout_constraintTop_toTopOf="@+id/COCT3" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/allocation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:id="@+id/name"
            android:layout_width="97dp"
            android:layout_height="0dp"
            android:ems="10"
            android:hint="进程名称"
            android:inputType="textPersonName"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/size"
            android:layout_width="87dp"
            android:layout_height="0dp"
            android:ems="10"
            android:hint="进程大小"
            android:inputType="number"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/create"
            app:layout_constraintStart_toEndOf="@+id/size"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="创建进程"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <Button
        android:id="@+id/allocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="分配设备"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/show"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:id="@+id/freeProcess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="输入进程名"
            android:inputType="textPersonName"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/free"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="回收设备"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/freeProcess"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <Button
        android:id="@+id/show"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="显示"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="74dp"
        android:text="设备"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="控制器"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="@+id/COCT1"
        app:layout_constraintStart_toStartOf="@+id/COCT1"
        app:layout_constraintTop_toTopOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="通道"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="@+id/CHCT1"
        app:layout_constraintStart_toStartOf="@+id/CHCT1"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/COCT3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:text="设备1"
        app:layout_constraintBottom_toBottomOf="@+id/DCT1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/DCT1"
        app:layout_constraintTop_toTopOf="@+id/DCT1" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设备2"
        app:layout_constraintBottom_toBottomOf="@+id/DCT2"
        app:layout_constraintStart_toEndOf="@+id/DCT2"
        app:layout_constraintTop_toTopOf="@+id/DCT2" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设备3"
        app:layout_constraintBottom_toBottomOf="@+id/DCT3"
        app:layout_constraintStart_toEndOf="@+id/DCT3"
        app:layout_constraintTop_toTopOf="@+id/DCT3" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设备4"
        app:layout_constraintBottom_toBottomOf="@+id/DCT4"
        app:layout_constraintStart_toEndOf="@+id/DCT4"
        app:layout_constraintTop_toTopOf="@+id/DCT4" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设备5"
        app:layout_constraintBottom_toBottomOf="@+id/DCT5"
        app:layout_constraintStart_toEndOf="@+id/DCT5"
        app:layout_constraintTop_toTopOf="@+id/DCT5" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="控制器1"
        app:layout_constraintBottom_toBottomOf="@+id/COCT1"
        app:layout_constraintStart_toEndOf="@+id/COCT1"
        app:layout_constraintTop_toTopOf="@+id/COCT1" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="控制器2"
        app:layout_constraintBottom_toBottomOf="@+id/COCT2"
        app:layout_constraintStart_toEndOf="@+id/COCT2"
        app:layout_constraintTop_toTopOf="@+id/COCT2" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="控制器3"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintStart_toEndOf="@+id/COCT3"
        app:layout_constraintTop_toTopOf="@+id/COCT3" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="通道一"
        app:layout_constraintBottom_toBottomOf="@+id/CHCT1"
        app:layout_constraintStart_toEndOf="@+id/CHCT1"
        app:layout_constraintTop_toTopOf="@+id/CHCT1" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="通道二"
        app:layout_constraintBottom_toBottomOf="@+id/CHCT2"
        app:layout_constraintStart_toEndOf="@+id/CHCT2"
        app:layout_constraintTop_toTopOf="@+id/CHCT2" />


</android.support.constraint.ConstraintLayout>